<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Customizando o Titulo do Toolbar Menu -->
    <style name="MaterialToolbarMenuStyleThemescreens" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="fontFamily">@font/quicksand_light</item>
        <item name="android:textColor">@color/colorTextToolbar</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <!-- Customizando os CardView cadastro -->
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">36dp</item>
        <item name="cornerSizeTopLeft">36dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Customizando os botoes Ação Bottom Sheet Adress Fragment -->
    <style name="MaterialButtomSheetTheme" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/colorButtonAcaoColorBlack</item>
        <item name="android:textColor">@color/colortexTitle</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Customizando os CardView dialog -->
    <style name="MaterialCardViewTheme" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>
